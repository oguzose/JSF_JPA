	<persistence-unit name="EmployeePersistenceUnit"
		transaction-type="RESOURCE_LOCAL">
		
		
		<class>_01.domain.Employee</class>
		<class>_01.domain.User</class>
		<class>_01.domain.Product</class>
		<class>_01.domain.Category</class>
		<properties>

